// disable automatic assignment of auto AI to the party
COPY_EXISTING ~partyai.2da~ ~override~
  REPLACE_TEXTUALLY ~BD[A-Z]+~ ~DEFAULT~
  BUT_ONLY

// update kit description strings
COPY_EXISTING ~clastext.2da~ ~override/clastext.2da~
  COUNT_2DA_COLS ~colcount~
  COUNT_2DA_ROWS ~colcount~ ~rowcount~

  SET column_patched = 0

  FOR (i = 0; i < rowcount; i += 1) BEGIN
    READ_2DA_ENTRY i 1 colcount classid

    // the shaman class
    PATCH_IF ("%classid%" STRING_COMPARE_CASE "21" = 0) AND (column_patched = 0) BEGIN
      READ_2DA_ENTRY i 4 colcount descstr
      SET_2DA_ENTRY i 4 colcount RESOLVE_STR_REF (@11114)

      SET column_patched = 1
    END
  END

  PATCH_IF column_patched = 0 BEGIN
    PATCH_FAIL "Error: row not found in clastext.2da, could not patch the description for the Shaman class"
  END

  BUT_ONLY

// prevent double duration Time Stop + Improved Alacrity wish option from appearing
COPY_EXISTING ~wish.2da~  ~override/wish.2da~
  REPLACE_TEXTUALLY ~23.+23.+23.+22~ ~23 23 23 21~
  REPLACE_TEXTUALLY ~35.+35.+35.+21~ ~35 35 35 25~
  REPLACE_TEXTUALLY ~27.+27.+22~ ~27 27 18~
  PRETTY_PRINT_2DA

// add custom conditions for splprot
COPY_EXISTING ~splprot.2da~ ~override/splprot.2da~
  COUNT_2DA_COLS ~colcount~
  COUNT_2DA_ROWS ~colcount~ ~rowcount~

  // add a condition to check if HP is lower than given value
  SET hp_lower_than = %rowcount%
  INSERT_2DA_ROW ~%hp_lower_than%~ ~colcount~ ~%hp_lower_than%_HP<n 0x000 -1 2~

  // add a condition to check if HP is greater than given value
  SET hp_greater_than = %rowcount% + 1
  INSERT_2DA_ROW ~%hp_greater_than%~ ~colcount~ ~%hp_greater_than%_HP>n 0x000 -1 3~

  PRETTY_PRINT_2DA

