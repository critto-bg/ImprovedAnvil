// Water's Edge +4
COPY_EXISTING ~sw1h52.itm~ ~override/S!sw19.itm~
  SAY NAME2     @10227
  SAY DESC      @10228

  WRITE_LONG 0x60 4 // +4 enchantment
  WRITE_ASCII 0x003a ~S!SW19~ #8

  // change thac0 and damage bonus
  LAUNCH_PATCH_FUNCTION ~ALTER_ITEM_HEADER~
    INT_VAR
      header_type = 1
      thac0_bonus = 4
      damage_bonus = 4
    STR_VAR
      icon = ~S!SW19~
  END

  // add poison damage
  LAUNCH_PATCH_FUNCTION ~ADD_ITEM_EFFECT~ INT_VAR
    type = 1
    opcode = 12
    target = 2
    parameter1 = 3
    parameter2 = 2097152
    timing = 1
  END

  // add APR bonus
  LAUNCH_PATCH_FUNCTION ~ADD_ITEM_EQEFFECT~ INT_VAR
    opcode = 1
    target = 1
    parameter1 = 1
    parameter2 = 0
    timing = 2
  END

  BUT_ONLY

