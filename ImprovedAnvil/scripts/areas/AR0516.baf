END

IF
  Global("IaExtraEnemy","AR0516",0)
  Global("ThrallOrb","GLOBAL",2)
  InMyArea(Player1)
  XPGT(Player1,2349999)
THEN
  RESPONSE #100
    SetGlobal("IaExtraEnemy","AR0516",1)
    CreateCreatureObject("S!phoun3",Player1,0,0,0) //
    CreateCreatureObject("S!phoun3",Player1,0,0,0) //
    CreateCreatureObject("S!phoun3",Player1,0,0,0) //
