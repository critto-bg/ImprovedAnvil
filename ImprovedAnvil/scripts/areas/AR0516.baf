IF
  InMyArea(Player1)
  Global("Ianticheat","AR0516",0)
  Exists("PBHUNT03") //
  !Dead("PBHUNT03") //
  !Allegiance("PBHUNT03",ENEMY)
  HPPercentLT("PBHUNT03",100)
THEN
  RESPONSE #100
    SetGlobal("Ianticheat","AR0516",1)
    ChangeEnemyAlly("PBHUNT03",ENEMY)
    ApplySpellRES("SPWII07","PBHUNT03")
END

