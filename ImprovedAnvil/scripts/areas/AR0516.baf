    CreateCreatureObjectOffScreen("S!phound",Player1,0,0,0) //
    CreateCreatureObjectOffScreen("S!phound",Player1,0,0,0) //
    CreateCreatureObjectOffScreen("S!phound",Player1,0,0,0) //
