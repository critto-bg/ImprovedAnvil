  Global("Iahardmode","GLOBAL",0)
  XPLT(Player1,2000000)
  Entered([ANYONE])
THEN
  RESPONSE #100
    CreateCreature("wolfgr01",[-1.-1],0)  // ~Greater Wolfwere~
    CreateCreature("wolfwe01",[-1.-1],0)  // ~Wolfwere~
    CreateCreature("wolfwe01",[-1.-1],0)  // ~Wolfwere~
    CreateCreature("wolfdr01",[-1.-1],0)  // ~Dread Wolf~
    CreateCreature("wolfdr01",[-1.-1],0)  // ~Dread Wolf~
END

