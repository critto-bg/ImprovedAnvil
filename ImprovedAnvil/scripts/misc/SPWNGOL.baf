IF
  XPLT(Player1,950000)
  Global("Iahardmode","Global",0)
  Entered([ANYONE])
THEN
  RESPONSE #100
    CreateCreature("S!coirnd",[-1.-1],0)  //
    CreateCreature("golsto01",[-1.-1],0)  // ~Stone Golem~
    CreateCreature("S!golcla",[-1.-1],0)  // ~Clay Golem~
    CreateCreature("S!icbonr",[-1.-1],0)  //
END

