IF
  XPLT(Player1,1650000)
  Global("Iahardmode","GLOBAL",0)
  Entered([ANYONE])
THEN
  RESPONSE #100
    CreateCreature("troll01",[-1.-1],0)  // ~Troll~
    CreateCreature("troll01",[-1.-1],0)  // ~Troll~
    CreateCreature("trolic01",[-1.-1],0)  // ~Ice Troll~
    CreateCreature("trolic01",[-1.-1],0)  // ~Ice Troll~
    CreateCreature("trolgi01",[-1.-1],0)  // ~Giant Troll~
    CreateCreature("trolsp01",[-1.-1],0)  // ~Spectral Troll~
END

