IF
  Allegiance(Myself,ENEMY)
  See(NearestEnemyOf(Myself))
  Global("Iabattle","AR1904",0)
THEN
  RESPONSE #100
    SetGlobal("Iabattle","AR1904",1)
    GiveItemCreate("s!misc62",Myself,0,0,0) //
END

