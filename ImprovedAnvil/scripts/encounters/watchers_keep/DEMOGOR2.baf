/// Demogorgon ///

// initial pre-buff, reset variables //

IF
	Detect([GOODCUTOFF])
	Allegiance(Myself,ENEMY)
	Global("Iaprebuf","LOCALS",0)
THEN
	RESPONSE #100
		SetGlobal("Iaprebuf","LOCALS",1)
    SetGlobal("Iadaemons","LOCALS",0)
    SetGlobal("Iaskins","LOCALS",0)
    SetGlobal("Iapfmw","LOCALS",0)
    SetGlobal("Iafod","LOCALS",0)
    SetGlobalTimer("Iaspell","LOCALS",3)
    SetGlobalTimer("IaPfmwTimer","LOCALS",25)
    SetGlobalTimer("Iademorest","GLOBAL",2100)
		DisplayString(Myself,73139) // Contingencyâ€”Fired
    ReallyForceSpell(Myself,DRAGON_STONE_SKIN)
		ReallyForceSpell(Myself,CLERIC_AURA_OF_FLAMING_DEATH) // SPPR730.SPL (Aura of Flaming Death)
    ReallyForceSpell(Myself,PROTECTION_MAGIC_WEAPON_NOEFF)
    ReallyForceSpellRES("SPWII02",Myself) // PfME
    ReallyForceSpellRES("SPWII03",Myself) // Spell Turning
		ReallyForceSpellRES("jwglobe",Myself) // Globe of Invulnerability
END

IF
  Detect([GOODCUTOFF])
  Allegiance(Myself,ENEMY)
  GlobalTimerExpired("Iademorest","GLOBAL")
  Global("Iaprebuf","LOCALS",1)
THEN
  RESPONSE #100
  	SetGlobal("Iaprebuf","LOCALS",0)
    ReallyForceSpellRES("SPWII07",Myself)
END

IF
  Allegiance(Myself,ENEMY)
  OR(2)
    Detect([PC])
    Detect([GOODCUTOFF])
  Global("partyfled","LOCALS",1)
THEN
  RESPONSE #100
    SetGlobal("partyfled","LOCALS",0)
END

// vanilla pre-death cutscene //

IF
	HPLT(Myself,30)
  Dead("S!Belch")
  Dead("S!Kazuul")
  Dead("S!Kargot")
  Dead("S!Rozvan")
  Dead("S!Nulong")
  Dead("S!Nulon1")
  Dead("S!Nulon2")
  Dead("S!Nulon3")
  Global("IaNulongaFinallyDead","AR3020",1)
	Global("DemoEffects","LOCALS",0)
THEN
	RESPONSE #100
		SetInterrupt(FALSE)
		MoveViewObject(Myself,INSTANT)
		StartTimer(77,6)
		ClearAllActions()
		SetGlobal("DemoEffects","LOCALS",1)
		StartCutSceneMode()
		DisplayStringHead(Myself,71009) // NO! NOOOOO! THIS CANNOT BE!
		CreateVisualEffectObject("spflsrin",Myself)
		Wait(1)
		CreateVisualEffectObject("sppowrrd",Myself)
		Wait(2)
		CreateVisualEffectObject("spfirepi",Myself)
		Wait(1)
		CreateVisualEffectObject("spplanar",Myself)
		Wait(2)
		SetGlobal("SPRITE_IS_DEADDEMOGOR2","GLOBAL",1)
		EndCutSceneMode()
		DestroySelf()
END

