    SetGlobal("Prep","LOCALS",1)
    SetGlobal("Iaonce","LOCALS",0)
    SetGlobal("Iatrigger","LOCALS",0)
    SetGlobal("Iapfmw","LOCALS",0)
    SetGlobal("Iacontingency","LOCALS",0)
    SetGlobal("Iastoneskin","LOCALS",0)
